{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pucoti",
  "version": "1.3.0",
  "identifier": "dev.pucoti",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pucoti",
        "width": 600,
        "height": 500,
        "minWidth": 100,
        "minHeight": 50,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "alwaysOnTop": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "A timer to stay on track and make predictions to overcome the planning fallacy.",
      "longDescription": "Pucoti helps you track predicted vs actual task durations and provides calibration statistics to improve your time estimation accuracy over time ."
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "msi",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "linux": {
      "deb": {
        "files": {
          "/usr/share/gnome-shell/extensions/pucoti@pucoti.dev/": "../gnome-extension/pucoti@pucoti.dev/"
        }
      },
      "rpm": {
        "files": {
          "/usr/share/gnome-shell/extensions/pucoti@pucoti.dev/": "../gnome-extension/pucoti@pucoti.dev/"
        }
      }
    }
  }
}
