{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pucoti",
  "version": "1.0.0",
  "identifier": "dev.pucoti",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pucoti",
        "width": 600,
        "height": 500,
        "minWidth": 100,
        "minHeight": 50,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "alwaysOnTop": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "msi", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}
