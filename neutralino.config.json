{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "dev.pucoti",
  "version": "1.0.0",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/app/build/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "filesystem.*",
    "window.*",
    "storage.*",
    "computer.*",
    "debug.log"
  ],
  "modes": {
    "window": {
      "title": "Pucoti",
      "width": 600,
      "height": 500,
      "minWidth": 100,
      "minHeight": 50,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/app/public/icons/favicon.ico",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    }
  },
  "cli": {
    "binaryName": "pucoti",
    "resourcesPath": "/app/build/",
    "extensionsPath": "/extensions/",
    "binaryVersion": "6.4.0",
    "clientVersion": "6.4.0",
    "frontendLibrary": {
        "patchFile": "/app/index.html",
        "devUrl": "http://localhost:5173",
        "projectPath": "/app/",
        "initCommand": "npm install",
        "devCommand": "BROWSER=none npm run dev",
        "buildCommand": "npm run build"
    }
  },
  "buildScript": {
    "mac": {
      "architecture": [
        "x64",
        "arm64",
        "universal"
      ],
      "minimumOS": "10.13.0",
      "appName": "Pucoti",
      "appBundleName": "Pucoti",
      "appIdentifier": "dev.pucoti",
      "appIcon": "app/public/icons/favicon.ico"
    },
    "win": {
      "architecture": [
        "x64"
      ],
      "appName": "Pucoti",
      "appIcon": "app/public/icons/favicon.ico"
    },
    "linux": {
      "architecture": [
        "x64",
        "arm64",
        "armhf"
      ],
      "appName": "Pucoti",
      "appIcon": "app/public/icons/favicon.ico",
      "appPath": "/usr/share/pucoti",
      "appIconPath": "/usr/share/pucoti/icon.png",
      "appIconLocation": "/usr/share/pucoti/icon.png"
    }
  }
}
